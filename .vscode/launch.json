{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Extension Prod",
            "runtimeExecutable": "${execPath}",
            "sourceMaps": true,
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "env": {
                "NODE_ENV": "test",
                "APP_ENV": "prod"
            },
            "outFiles": [
                "${workspaceFolder}/dist/extension.js"
            ],
            "preLaunchTask": "npm: watch"
        },
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Extension Dev",
            "runtimeExecutable": "${execPath}",
            "sourceMaps": true,
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "env": {
                "NODE_ENV": "test",
                "APP_ENV": "development"
            },
            "outFiles": [
                "${workspaceFolder}/dist/extension.js"
            ],
            "preLaunchTask": "npm: watch"
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/dist/test"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/test/**/*.js"
            ],
            "preLaunchTask": "npm: test-compile"
        }
    ],
    "compounds": [
        {
            "name": "Multiple Extensions",
            // Launch 2 debugger extensions at once
            "configurations": [
                "Launch Extension Prod",
                "Launch Extension Dev"
            ]
        }
    ]
}
